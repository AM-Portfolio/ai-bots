modules = ["python-3.11"]
[agent]
expertMode = true
integrations = ["github:1.0.0", "confluence:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "UI"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "UI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ui && streamlit run app.py --server.port 8501 --server.address 0.0.0.0"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8501
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "python main.py & cd ui && streamlit run app.py --server.port 8501 --server.address 0.0.0.0"]
